{
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Optimized",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-release/MTS2D",
            "args": [
                "smallSimulation.conf"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build-release",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "build-release",
            "postDebugTask": "make plots and animations"
        },
        {
            "name": "Debug gdb (linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/MTS2D",
            "args": [
                "smallSimulation.conf",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb", // Path to gdb
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build and test",
            "postDebugTask": "make plots and animations"
        },
        {
            "name": "Debug lldb (mac)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/MTS2D",
            "args": [
                "smallSimulation.conf",
            ],        
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "build and test",
            "postDebugTask": "make plots and animations",
        },
        {
            "name": "Debug without test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/MTS2D",
            "args": [
                "smallSimulation.conf",
            ],  
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "build",
        },
        {
            "name": "Debug test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test_MTS2D",
            "args": [
                "--no-colors=true"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build",
        },
    ],
    "version": "2.0.0"
}