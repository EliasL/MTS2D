            "cwd": "${workspaceFolder}/build",
            "initCommands": [
                "command script import /Users/eliaslundheim/work/PhD/SimulationScripts/Debugging/lldbFormating.py",
                "type summary add -F lldbFormating.valarray_summary VArray"
