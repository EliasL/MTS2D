{
    "tasks": [
        {
            "label": "build and test",
            "dependsOrder": "sequence",
            "type": "shell",
            "dependsOn":[
                "build",
                "test"
            ]
        },
        {
            "label": "build",
            "command": "mkdir -p build-debug && cd build-debug && cmake .. && make",
            "type": "shell",
        },
        {
            "label": "build-release",
            "command": "mkdir -p build-release && cd build-release && cmake -DCMAKE_BUILD_TYPE=Release .. && make",
            "type": "shell"
        },        
        {
            "label": "test",
            "type": "shell",
            "command": "cd build-debug && ./test_CrystalSimulation",
        },
        {
            "label": "make plots and animations",
            "type": "shell",
            "args": [
                "Plotting/plotAll.py",
                "smallSimulation.conf",
                "/media/elias/Data/output/"
            ],
            "command": "python",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        }
    ],
    "version": "2.0.0"
}