{
    "tasks": [
        {
            "label": "build and test",
            "dependsOrder": "sequence",
            "type": "shell",
            "dependsOn":[
                "build",
                "test"
            ]
        },
        {
            "label": "build",
            "command": "mkdir -p build && cd build && cmake .. && make",
            "type": "shell",
        },
        {
            "label": "build-release",
            "command": "mkdir -p build && cd build && cmake -DCMAKE_BUILD_TYPE=Release .. && make",
            "type": "shell"
        },        
        {
            "label": "test",
            "type": "shell",
            "command": "cd build && ./test_CrystalSimulation",
        },
        {
            "label": "make plots and animations",
            "type": "shell",
            "command": "python Plotting/main.py",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        }
    ],
    "version": "2.0.0"
}