{
    "tasks": [
        {
            "label": "build and test",
            "dependsOrder": "sequence",
            "type": "shell",
            "dependsOn": [
                "build",
                "test",
                "generateDefaultSettings"
            ]
        },
        {
            "label": "build",
            "command": "mkdir -p build && cd build && cmake .. && make",
            "type": "shell",
        },
        {
            "label": "build-release",
            "command": "mkdir -p build-release && cd build-release && cmake -DCMAKE_BUILD_TYPE=Release .. && make",
            "type": "shell"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "cd build && ./test_MTS2D",
        },
        {
            "label": "make plots and animations",
            "type": "shell",
            "args": [
                "../SimulationScripts/Plotting/plotAll.py",
                "smallSimulation.conf",
                "build/"
            ],
            "command": "python3",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "generateDefaultSettings",
            "type": "shell",
            "args": [
                "../SimulationScripts/Management/configGenerator.py",
                "singleDislocation",
            ],
            "command": "python3",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
    ],
    "version": "2.0.0"
}